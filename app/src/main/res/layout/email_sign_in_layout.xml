<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingStart="14dp"
    android:paddingEnd="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/email_sign_in_login_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/email_sign_in_login_button_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <TextView
                android:id="@+id/email_sign_in_login_button_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="LOGIN"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="visible"/>

            <ProgressBar
                android:id="@+id/email_sign_in_login_button_progress_bar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="invisible"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_sign_in_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/email_sign_in_login_button"
        android:layout_marginEnd="6dp"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email_sign_in_text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textSize="17sp"
            android:textStyle="bold"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>